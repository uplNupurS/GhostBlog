{{!< default}}

<div class="content-area">
<main class="site-main">

    {{#post}}

    <article class="{{post_class}} gh-article">
        <header class="gh-article-header gh-canvas">
            <h1 class="gh-article-title">{{title}}</h1>
            {{!-- <span class="gh-article-subtitle">
                <time datetime="{{date format="YYYY-MM-DD"}}">Last updated on {{date published_at}}</time>
            </span> --}}
            {{> "feature-image"}}


            {{#if custom_excerpt}}
                <div class="gh-article-excerpt">{{custom_excerpt}}</div>
            {{/if}}
        </header>

        <div class="gh-content gh-canvas">
            {{content}}
        </div>

         <div class="pagination-container gh-canvas">
        <nav class="pagination">

            <div class="pagination-left">
                {{#prev_post}}
                    <a class="newer-posts" href="{{url}}">
                        <span class="pagination-label">Previous</span>
                        {{title}}
                    </a>
                {{/prev_post}}
            </div>

            <div class="pagination-right">
                {{#next_post}}
                    <a class="older-posts" href="{{url}}">
                        <span class="pagination-label">Next</span>
                        {{title}}
                    </a>
                {{/next_post}}
            </div>

        </nav>
        </div>
    </article>

    {{#if comments}}
        <div class="gh-comments gh-canvas">
            {{comments}}
        </div>
    {{/if}}

    {{/post}}

    {{!-- {{#if @custom.show_related_posts}}
        {{> "related-posts"}}
    {{/if}} --}}

</main>
</div>