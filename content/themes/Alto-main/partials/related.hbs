{{#get "posts" filter="tag:{{primary_tag.slug}}+id:-{{id}}" include="tags" as |related|}}{{#if related}}
<section class="related-posts gh-canvas">

    <h3 class="related-title">You might also like...</h3>

    <div class="related-feed">
        {{#foreach related}}

        <article class="{{post_class}}{{#unless feature_image}} no-image{{/unless}}">

            {{!-- {{#if feature_image}}
            <figure class="post-media">
                <div class="u-placeholder rectangle">
                    <a class="post-image-link" href="{{url}}">
                        <img class="post-image u-object-fit" src="{{img_url feature_image size=" m"}}" alt="{{title}}"
                            loading="lazy">
                    </a>
                </div>
            </figure>
            {{/if}} --}}

            <header class="related-header">
                <div class="related-calendar-title">
                    <time class="related-meta" datetime="{{date format=" YYYYMM-DD"}}">
                        <div class="feed-calendar">
                            <div class="feed-calendar-month">
                                {{date published_at format="MMM"}}
                            </div>
                            <div class="feed-calendar-day">
                                {{date published_at format="DD"}}
                            </div>
                        </div>
                    </time>

                    {{!-- {{#if feature_image}}
                    <figure>
                        <img style="width: 30%;" src="{{img_url feature_image size=" xs"}}" alt="{{title}}">
                        </a>
                    </figure>
                    {{/if}} --}}
                    <h2 class="related-title">
                        <a class="related-title-link" href="{{url}}">{{title}}</a>
                    </h2>

                </div>
                {{#if reading_time}}
                <div class="feed-length">
                    {{reading_time}}
                </div>
                {{/if}}
            </header>

        </article>

        {{/foreach}}
    </div>

</section>
{{/if}}{{/get}}